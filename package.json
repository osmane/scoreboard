{
  "name": "scoreboard",
  "version": "1.0.0",
  "description": "scoreboard for tailuge/billiards running on cyclic.sh",
  "scripts": {
    "build": "npx tsc && npm run build:frontend",
    "build:frontend": "npx parcel build src/client/*.html",
    "dev": "concurrently \"npx tsc -w\" \"npx parcel watch src/client/*.html\" \"node --watch dist/index.js\"",
    "start": "node dist/index.js",
    "prettify": "prettier --cache true --write --trailing-comma es5 --no-semi  {src,test}/*.ts {src,test}/**/*.ts *.j*",
    "deps": "npx yarn-check --skip-unused",
    "test": "jest --maxWorkers=1",
    "coverage": "jest --maxWorkers=1 --coverage"
  },
  "keywords": [],
  "author": "tailuge",
  "license": "ISC",
  "dependencies": {
    "@cyclic.sh/dynamodb": "^0.0.35",
    "chart.js": "^4.4.0",
    "chartjs-adapter-luxon": "^1.3.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsoncrush": "^1.1.8",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "parcel": "^2.10.3",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "url": "^0.11.0"
  }
}
