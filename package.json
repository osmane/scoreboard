{
  "name": "scoreboard",
  "version": "1.0.0",
  "description": "scoreboard for osmane/billiards running on vercel.com",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettify": "prettier --write --trailing-comma es5 --no-semi {src,public}/**/*.{ts,tsx,html,css} *.json",
    "deps": "npx yarn-check --skip-unused",
    "coverage": "jest --coverage --config src/tests/jest.config.js",
    "test": "jest --config src/tests/jest.config.js",
    "docker:build": "docker buildx build --platform linux/amd64 -f ./src/nchan/Dockerfile -t osmane/billiards-network ./src/nchan",
    "docker:push": "docker push osmane/billiards-network",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:local": "TEST_URL=http://localhost:3001/ playwright test --headed"
  },
  "keywords": [
    "next",
    "vercel.com",
    "billiards",
    "express",
    "llm",
    "kv"
  ],
  "author": "osmane",
  "license": "GPL-3.0",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@vercel/kv": "3.0.0",
    "cross-fetch": "^4.1.0",
    "framer-motion": "12.5.0",
    "jsoncrush": "^1.1.8",
    "next": "15.2.2",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@playwright/test": "1.51.0",
    "@types/ioredis-mock": "^8.2.5",
    "@types/jest": "^29.5.14",
    "@types/react": "19.0.10",
    "eslint": "9.22.0",
    "eslint-config-next": "15.2.2",
    "ioredis": "5.6.0",
    "ioredis-mock": "8.9.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "29.2.6",
    "typescript": "5.8.2"
  }
}
