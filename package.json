{
  "name": "scoreboard",
  "version": "1.0.0",
  "description": "scoreboard for tailuge/billiards running on vercel.com",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prettify": "prettier --cache true --write --trailing-comma es5 --no-semi {src,public}/**/*.{ts,tsx,html,css} *.j*",
    "deps": "npx yarn-check --skip-unused",
    "coverage": "jest --coverage --config src/tests/jest.config.js",
    "test": "jest --config src/tests/jest.config.js",
    "docker:build": "docker buildx build --platform linux/amd64 -f ./src/nchan/Dockerfile -t tailuge/billiards-network ./src/nchan",
    "docker:push": "docker push tailuge/billiards-network"
  },
  "keywords": [
    "next",
    "vercel.com",
    "billiards",
    "express",
    "llm",
    "kv"
  ],
  "author": "tailuge",
  "license": "GPL-3.0",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@vercel/kv": "3.0.0",
    "cross-fetch": "^4.1.0",
    "framer-motion": "^11.15.0",
    "jsoncrush": "^1.1.8",
    "next": "15.1.3",
    "react": "latest",
    "react-dom": "latest"
  },
  "devDependencies": {
    "@types/ioredis-mock": "^8.2.5",
    "@types/jest": "^29.5.14",
    "@types/react": "19.0.2",
    "eslint": "9.17.0",
    "eslint-config-next": "15.1.3",
    "ioredis": "5.4.2",
    "ioredis-mock": "8.9.0",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  }
}
