{
  "name": "scoreboard",
  "version": "1.0.0",
  "description": "scoreboard for tailuge/billiards running on cyclic.sh",
  "scripts": {
    "build": "npx parcel build",
    "serve": "concurrently \"npx parcel watch\" \"node --watch dist/backend/server.js\"",
    "start": "node dist/backend/server.js",
    "prettify": "prettier --cache true --write --trailing-comma es5 --no-semi  {src,test}/*.ts {src,test}/**/*.{ts,html,css} *.j*",
    "deps": "npx yarn-check --skip-unused",
    "test": "jest --maxWorkers=1",
    "coverage": "jest --maxWorkers=1 --coverage"
  },
  "targets": {
    "frontend": {
      "context": "browser",
      "source": [
        "src/client/index.html",
        "src/client/hiscore.html",
        "src/client/leaderboard.html",
        "src/client/notfound.html"
      ]
    },
    "backend": {
      "context": "node",
      "source": "src/server.ts"
    }
  },
  "keywords": [
    "parcel",
    "cyclich.sh",
    "billiards",
    "express"
  ],
  "author": "tailuge",
  "license": "ISC",
  "dependencies": {
    "@cyclic.sh/dynamodb": "^0.0.35",
    "chart.js": "4.4.2",
    "chartjs-adapter-luxon": "^1.3.1",
    "cors": "^2.8.5",
    "express": "4.19.2",
    "jsoncrush": "^1.1.8",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.2",
    "@types/supertest": "6.0.2",
    "buffer": "^5.5.0||^6.0.0",
    "concurrently": "^8.2.2",
    "crypto-browserify": "^3.12.0",
    "events": "^3.1.0",
    "jest": "^29.7.0",
    "parcel": "2.12.0",
    "path-browserify": "^1.0.0",
    "prettier": "3.2.5",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "stream-http": "^3.1.0",
    "supertest": "6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.3",
    "url": "^0.11.0"
  }
}
